.addr-body{
    position: relative;
    box-sizing: border-box;
}

.addr-body{
    height: 100%;
    box-sizing: border-box;
}
.top-sec{
    position: relative;
    top:0;
    margin: 16rpx 0;
    background: white;
    border-bottom: 1rpx solid #e5e5e5;
}
.input-wrapper{
    height: 116rpx;
    padding:0 34rpx;
    box-sizing: border-box;
    line-height: 116rpx;
    font-size: 30rpx;
    border-bottom: 1rpx solid #f2f2f2;
}
.top-sec .input-wrapper .input-title{
    vertical-align: top;
    display: inline-block;
    width: 21%;
}
.top-sec .input-wrapper input {
    vertical-align: top;
    display: inline-block;
    height: 116rpx;
    line-height: 116rpx;

}
.input-title{
  padding: 0 34rpx;
}
.input-wrapper{
    padding: 0;
}

.add-address{
    position: absolute;
    top:600rpx;
    width: 100%;
}
.address-btn{
    color: white;
    background-color: #2fa7e0;
}

.addpic-btn{
    border-radius:6px;
    width:250rpx;
    height:70rpx;
    text-align: center;
    font-size:28rpx;
    color: white;
    background-color: #2fa7e0;
    display: inline-block;
    vertical-align: middle;
}

.pic{
  height: 100%;
  box-sizing: border-box;
  display: inline-block;
  vertical-align: top;
  padding-left: 0rpx;
  width: 36%;
}