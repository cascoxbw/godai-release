.wantList-info{
  position: relative;
}

.header {
  
  height: 94rpx;
  line-height: 94rpx;
  width: 100%;
  background: white;
  border-bottom: 1px solid #f2f2f2;
}

.single {
  display: inline-block;
  height: 100%;
  width: 240rpx;
  text-align: center;
  color: #2fa7e0;

}

.listLength {
  height: 100%;
  display: inline-block;

}

.warning{
    display: inline-block;
    position: absolute;
    top: 900rpx;
    left: 50%;
    transform: translateX(-50%);
    padding: 10rpx 26rpx;
    background-color: rgba(0,0,0,0.6);
    color: white;
    font-size: 28rpx;
    z-index: 1000;

}

.noWant{
    width: 100%;
    height: 300rpx;
    padding-top: 230rpx;
    text-align: center;
    font-size:28rpx;
    color:#999;
    background-size: 100rpx auto;
    margin-bottom: 50rpx;
}

.list-detail {
  position: relative;
  width: 100%;
  background: white;
  border-top: 2rpx solid #e5e5e5;
  border-bottom: 2rpx solid #e5e5e5;
  margin-top: 12rpx;
  padding: 20rpx 20rpx 10rpx 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.list-detail .list-sec {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
}

.left-sec {
  height: 100%;
  box-sizing: border-box;
  display: inline-block;
  vertical-align: top;
  padding-right: 40rpx;
  width: 42%;
}
.sec-img {
  width: 100%;
  height: 100%;
}
.right-sec {
  position: relative;
  vertical-align: top;
  display: inline-block;
  width: 58%;
  height: 100%;
  padding-bottom: 0rpx;
}

.right-sec .want-name {

  font-size: 32rpx;
}

.right-sec .want-spec {
  font-size: 32rpx;
}

.right-sec .want-note {
  font-size: 32rpx;
}

.right-sec .want-time {
  font-size: 32rpx;
}

.addWant{
    padding-top: 20rpx;
    width: 100%;
}
.addWant-btn{
    border-radius:6px;
    width:300rpx;
    height:70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size:28rpx;
    color: white;
    background-color: #2fa7e0;
}
