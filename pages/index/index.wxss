/**index.wxss**/
/**全局**/
.container {
  height: 100%;
  position: relative;
}

/**搜索**/
.search-view{
  position: absolute;
  top:0;
  width: 100%;
  height: 100rpx;
}
.serarch-content{
   background: white;
   width:650rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
   padding-top: auto;
   padding-left: 20rpx;
   padding-bottom: auto;
   margin: auto;
   height: 70rpx;
   border: 1px solid #d8d8d8;
   border-radius: 16rpx;
}
.search-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.search-input{
  width: 500rpx;
  font-size: 28rpx;
}
.search-btn{
  width: 150rpx;
  height: 70rpx;
  margin-right: 0rpx;
  background-color:white;
  font-size: 28rpx;
  align-items: center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color:black;
  border:none;
  position: relative;
}

/**公告**/
.jxc {
  position: absolute;
  top: 100rpx;
  width: 100%;
}

.top-slider {
  display: block;
  width: 100%;
  height: 200px;
  background: white;
  border: 2rpx solid #e5e5e5;
}
  .slider-sec{
    width: 100%;
    height: 100%;
  }
    .slide-image{
      width:100%;
      height:100%;
    }

.warning{
    display: inline-block;
    position: absolute;
    top: 600rpx;
    left: 50%;
    transform: translateX(-50%);
    padding: 10rpx 26rpx;
    background-color: rgba(0,0,0,0.6);
    color: white;
    font-size: 28rpx;
    z-index: 1000;

}

.list-detail {
  position: relative;
  width: 100%;
  background: white;
  border-top: 2rpx solid #e5e5e5;
  border-bottom: 2rpx solid #e5e5e5;
  margin-top: 12rpx;
  padding: 20rpx 20rpx 20rpx 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.list-detail .list-sec {
  width: 100%;
  height: 220rpx;
  box-sizing: border-box;
}

.left-sec {
  height: 100%;
  box-sizing: border-box;
  display: inline-block;
  vertical-align: top;
  padding-right: 40rpx;
  width: 36%;
}

.sec-img {
  width: 100%;
  height: 100%;
}

.right-sec {
  position: relative;
  vertical-align: top;
  display: inline-block;
  width: 60%;
  height: 100%;
}

.right-sec .title {
  position: absolute;
  top: 12rpx;
  width: 100%;
  height: 40rpx;
  word-break:keep-all;           /* 不换行 */
  white-space:nowrap;          /* 不换行 */
  overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow:ellipsis;         /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
  font-size: 32rpx;
}

.right-sec .description {
  margin-top: 80rpx;
  font-size: 24rpx;
  word-break:keep-all;           /* 不换行 */
  white-space:nowrap;          /* 不换行 */
  overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow:ellipsis;
}

.right-sec .pirce-wrapper {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 40rpx;
  font-szie: 28rpx;
}

.inline-block {
  display: inline-block;
}

.go-buy {
  position: absolute;
  right: 10rpx;
  bottom: -8rpx;
  width: 140rpx;
  height: 52rpx;
  line-height: 52rpx;
  transform: translateY(-50%);
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: white;
  background-color: #2fa7e0;
}